QPushButton,KanoOpenFile{
        background-color:rgb(70,70,70);
        font:16x "Microsoft YaHei";
        color:rgb(200,200,200);
        border-radius:5px;
        padding: 5px;

}
QPushButton::menu-indicator{image:none}

QPushButton:hover,KanoOpenFile:hover{
    background-color:rgb(99, 99, 99);
    border: 1px solid #707070;
    border-radius:5px;
    padding: 5px;
}

QPushButton:pressed,KanoOpenFile:pressed{
    border:none;
}


